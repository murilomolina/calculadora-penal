<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <!-- Handle (pequena barra) -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:alpha="0.12"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white" />

    <TextView
        android:id="@+id/titleResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado do CÃ¡lculo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumo e datas importantes"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginBottom="14dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtResultadoDetalhado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carregando..."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompartilhar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Compartilhar"
            android:textAllCaps="false"
            app:strokeColor="@color/yellow"
            android:textColor="@color/yellow"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContato"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tirar duvidas"
            android:textAllCaps="false"
            app:strokeColor="@color/yellow"
            app:backgroundTint="@color/yellow"
            android:textColor="@color/blue"
            android:layout_marginEnd="8dp" />

<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/btnFecharSheet"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Fechar"-->
<!--            android:textAllCaps="false"-->
<!--            app:backgroundTint="@color/yellow"-->
<!--            android:textColor="@color/blue" />-->
    </LinearLayout>

</LinearLayout>
