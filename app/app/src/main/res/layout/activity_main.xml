<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Scrollable content constrained to the parent -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="16dp">

                <!-- Logo da empresa -->
                <ImageView
                    android:id="@+id/logoEmpresa"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo_branca"
                    android:contentDescription="Logo da Empresa"
                    android:layout_marginEnd="12dp"
                    android:scaleType="fitCenter" />

                <!-- Título principal -->
                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculadora Penal"
                    android:textAppearance="?attr/textAppearanceHeadlineMedium"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Pena Total -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pena Total"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <NumberPicker
                    android:id="@+id/penaTotalAnosPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="8dp" />

                <NumberPicker
                    android:id="@+id/penaTotalMesesPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <NumberPicker
                    android:id="@+id/penaTotalDiasPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Início do Cumprimento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio do Cumprimento da Pena"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inicioCumprimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:singleLine="true"
                android:hint="DD-MM-AAAA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempo de Detração"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <NumberPicker
                    android:id="@+id/detracaoAnosPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <NumberPicker
                    android:id="@+id/detracaoMesesPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <NumberPicker
                    android:id="@+id/detracaoDiasPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!-- Tipo de Crime -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Crime"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/tipoCrimeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="14dp" />

            <!-- Status do Apenado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status do Apenado"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/statusApenadoSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="14dp" />


            <!-- Action button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/yellow"
                android:textColor="@color/blue"
                android:text="calcular"
                android:textAllCaps="true"
                android:layout_marginTop="6dp" />

            <!-- Output area (boxed) -->
<!--            <TextView-->
<!--                android:id="@+id/outputText"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="18dp"-->
<!--                android:padding="12dp"-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="@color/yellow"-->
<!--                android:background="@color/blue"-->
<!--                android:text="valores do ultimo calculo" />-->
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
